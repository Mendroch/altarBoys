{
  "name": "altarboys",
  "displayName": "Ministranci",
  "version": "1.0.0",
  "description": "Aplikacja dedykowana ministrantom ze Skoczowa",
  "author": "Krzysztof Mendroch, OptimalIT",
  "homepage": "./",
  "main": "index.js",
  "private": true,
  "dependencies": {
    "axios": "^1.4.0",
    "framer-motion": "^10.12.7",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-router-dom": "^6.11.1",
    "react-scripts": "5.0.1",
    "reset-css": "^5.0.1",
    "styled-components": "^5.3.10",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cordova-android": "^11.0.0",
    "cordova-ios": "^6.3.0",
    "cordova-plugin-firebasex": "^16.0.0",
    "cordova-plugin-screen-orientation": "^3.0.3",
    "cordova-plugin-statusbar": "^3.0.0",
    "es6-promise-plugin": "^4.2.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-screen-orientation": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-firebasex": {
        "ANDROID_ICON_ACCENT": "#1B7290",
        "ANDROID_FIREBASE_PERFORMANCE_MONITORING": "false",
        "IOS_STRIP_DEBUG": "true",
        "FIREBASE_ANALYTICS_COLLECTION_ENABLED": "false",
        "FIREBASE_PERFORMANCE_COLLECTION_ENABLED": "false",
        "FIREBASE_CRASHLYTICS_COLLECTION_ENABLED": "false",
        "FIREBASE_FCM_AUTOINIT_ENABLED": "false",
        "SETUP_RECAPTCHA_VERIFICATION": "true",
        "IOS_ENABLE_APPLE_SIGNIN": "true",
        "IOS_USE_PRECOMPILED_FIRESTORE_POD": "false"
      }
    },
    "platforms": [
      "ios",
      "android"
    ]
  }
}
